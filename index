<body>

  <h1>Escáner de Tag NFC</h1>
  <p>Haz clic en el botón y acerca una etiqueta NFC</p>
  <button onclick="leerNFC()">Escanear NFC</button>

  <div id="output">Esperando escaneo...</div>

  <script>
    async function leerNFC() {
      if ("NDEFReader" in window) {
        try {
          const ndef = new NDEFReader();
          await ndef.scan();
          document.getElementById("output").textContent = "Escaneando... acerca la etiqueta NFC";

          ndef.onreading = event => {
            const { serialNumber, message } = event;
            let result = `Tag detectado:\nID: ${serialNumber}\n`;

            for (const record of message.records) {
              const textDecoder = new TextDecoder(record.encoding || "utf-8");
              const data = textDecoder.decode(record.data);
              result += `Tipo: ${record.recordType}\nContenido: ${data}\n`;
            }

            document.getElementById("output").textContent = result;
          };
        } catch (error) {
          document.getElementById("output").textContent = `Error al leer NFC: ${error}`;
        }
      } else {
        document.getElementById("output").textContent = "Tu navegador no soporta NFC Web API.";
      }
    }
  </script>

</body>
</html>
